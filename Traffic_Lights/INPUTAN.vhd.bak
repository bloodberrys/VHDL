LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE NUMERIC_STD.ALL;

ENTITY INPUTAN IS
PORT ( ENABLER : IN STD_LOGIC;
		 CLOCK : IN STD_LOGIC;
		 ANGKA : IN INTEGER RANGE 0 TO 99;
		 OUTPUT : OUT UNSIGNED(7 DOWNTO 0));
END COUNTER;

ARCHITECTURE COUNTING OF COUNTER IS
SIGNAL PENGHITUNG : INTEGER RANGE 0 TO 99;
BEGIN
	PROCESS (CLOCK)
	BEGIN
		IF RISING_EDGE (CLK) THEN
			IF LOAD ='1' THEN
				ANGKA <= ANGKA -1;
			END IF;
				OUTPUT <= UNSIGNED(ANGKA,8);
		END IF;
END ARCHITECTURE;